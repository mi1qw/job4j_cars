<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://127.0.0.1:5432/car
        </property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">Password12!</property>
        <property name="hibernate.connection.pool_size">2</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.auto_quote_keyword=true">true</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <!--                <property name="hibernate.hbm2ddl.auto">validate</property>-->
        <!--        <property name="hibernate.hbm2ddl.auto">create</property>-->
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="javax.persistence.validation.mode">none</property>
        <property name="hibernate.jdbc.time_zone">Europe/Kiev</property>
        <!-- List of XML mapping files -->

        <mapping class="com.example.car.model.Account"/>
        <mapping class="com.example.car.model.Body"/>
        <mapping class="com.example.car.model.Car"/>
        <mapping class="com.example.car.model.Category"/>
        <mapping class="com.example.car.model.City"/>
        <mapping class="com.example.car.model.Color"/>
        <mapping class="com.example.car.model.Driver"/>
        <mapping class="com.example.car.model.Engine"/>
        <mapping class="com.example.car.model.Gearbox"/>
        <mapping class="com.example.car.model.Generations"/>
        <mapping class="com.example.car.model.Mark"/>
        <mapping class="com.example.car.model.Model"/>
        <mapping class="com.example.car.model.Transmission"/>
        <mapping class="com.example.car.model.ModificationId"/>
        <mapping class="com.example.car.model.Modification"/>


    </session-factory>
</hibernate-configuration>